@model Clicks.Yoga.Portal.Models.Venues.VenueAmenitiesUpdateModel

@using (Html.BeginForm("UpdateAmenities", "Venues", FormMethod.Post, new { enctype = "multipart/form-data", id = "update-amenities-form" }))
{
    @Html.HiddenFor(m => m.VenueId)

    <div style="overflow:hidden;">
        <h3 class="fl">Amenities</h3>
        <p class="fr" style="font-size:10px;">Can't find what you're looking for?<br /><a href="mailto:info@yogaclicks.com?subject=Suggest&nbsp;an&nbsp;amenity">Suggest unlisted amenity</a></p>
    </div>
    @Html.EditorFor(m => m.Amenities)

    <div class="venue-services-save-section">
        <span class="venue-amenities-saved-text">Changes Saved</span>
        <button type="submit" class="button save fr">
            Save changes &nbsp;
            <img src="/images/icon-save.png">
        </button>
    </div>
}