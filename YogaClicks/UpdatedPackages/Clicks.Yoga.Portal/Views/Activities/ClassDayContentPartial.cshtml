@using Clicks.Yoga.Portal.Models.Activities
@model Clicks.Yoga.Portal.Models.Activities.ActivityClassDayContentPartialModel

<div class="classesTable">
    <div class="tableHeader"><br />
        <h3 class="pull-left">@Model.DayName</h3>
        <div class="next">
            <a href="javascript:void(0)" data-role="NavigateButton" class="pull-right btn btn-clear btn-default" data-date="@Model.Date.AddDays(1).ToString()">Next</a>
        </div>    
    <div class="prev">
            @if (Model.Date > DateTime.Now.Date)
            {
                <a href="javascript:void(0)" data-role="NavigateButton" style="margin-left: 5px" class="pull-right btn btn-clear btn-default" data-date="@Model.Date.AddDays(-1).ToString()">Previous</a>
            }
        </div>
   
    </div>
    <br style="clear: both;">
    <div data-role="Parameters">
        @Html.Partial("CriteriaHiddenPartial", Model.Criteria)
    </div>


    @foreach (var repeat in Model.Repeats)
    {
        @Html.Partial("ClassPartial", new ActivityClassPartialModel(repeat, false))
    }
    <div class="tableHeader">
        <div class="next">
            <a href="javascript:void(0)" data-role="NavigateButton" class="pull-right btn btn-clear btn-default" data-date="@Model.Date.AddDays(1).ToString()">Next</a>
        </div>
        <div class="prev">

            @if (Model.Date > DateTime.Now.Date)
            {
                <a href="javascript:void(0)" style="margin-left: 5px" data-role="NavigateButton" class="pull-right btn btn-clear btn-default" data-date="@Model.Date.AddDays(-1).ToString()">Previous</a>
            }
        </div>
       
    </div>
</div>
<br /><br />