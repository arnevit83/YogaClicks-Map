@model Clicks.Yoga.Portal.Models.Search.SearchCriteriaModel

<br /><br />

@using (Html.BeginForm(null, null, FormMethod.Get))
    {
        @Html.HiddenOptional("Types", Model.Types)
        @Html.HiddenOptional("Keywords", Model.Keywords)
        @Html.HiddenOptional("Style", Model.Style)
        @Html.HiddenOptional("Teacher", Model.Teacher)
        @Html.HiddenOptional("TeacherService", Model.TeacherService)
        @Html.HiddenOptional("Venue", Model.Venue)
        @Html.HiddenOptional("VenueType", Model.VenueType)
        @Html.HiddenOptional("VenueService", Model.VenueService)
        @Html.HiddenOptional("Location", Model.Location)
        @Html.HiddenOptional("Latitude", Model.Latitude)
        @Html.HiddenOptional("Longitude", Model.Longitude)
        @Html.HiddenOptional("PageIndex", Model.PageIndex)
        @Html.HiddenOptional("PageSize", Model.PageSize)
    @Html.HiddenOptional("YogaTherapists", Model.YogaTherapists)
        @Html.LabelFor(m => m.SortOrder, "Sort by")

        @Html.EditorFor(m => m.SortOrder, new { Model.LocationKnown })
    }

<script type="text/javascript">
    $(document).ready(function () {
        $(document).on("change", "#SortOrder", function () {
            $(this).closest('form').submit();
        });
    });
</script>