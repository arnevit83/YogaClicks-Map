@{
    ViewBag.Title = "Teacher Information";
    ViewBag.HeaderClass = "purple-border";
    Layout = "~/Views/Layout/SignUpLayout.cshtml";
}

<img src="/images/svgicons/Icon_TeacherPurple.svg" class="signup-title signup-icon" data-svgpng="/images/SvgIcons/Icon_TeacherPurple.png" alt="Make yourself discoverable">
<div class="row purple-text sign-up-page1">
    <div class="col-xs-1"></div>
    <div class="col-xs-10 signup-large-text">
        <p>Namaste! Create a teacher’s page to connect with the powered by yoga community.</p>
        <a href="/Signup/Teacher/2" class="btn btn-default btn-lg purple-border purple-text purple-inverse-text-hover">
            Get started!
        </a>
        <p>Use your teacher’s page to:</p>
        <ul class="signup-list">




            
            <li>  Attract new students</li>
            <li> Promote your schedule (free!)</li>
            <li>  Meet like-minded teachers and venue owners</li>
            <li>  Research 300+ clinical yoga studies</li>
            <li> Shop the community’s creations</li>
            <li> And much more!</li>



        </ul>
    </div>
    <div class="col-xs-1"></div>
</div>
<div class="row signup-footer-purple">
    @Html.Partial("_FooterBar")
</div>
<div class="row">
    <div class="col-xs-12 purple-text signup-footer-back">
        <p><a href="javascript:history.go(-1)">Not a Teacher?</a></p>
    </div>
</div>
<p></p>