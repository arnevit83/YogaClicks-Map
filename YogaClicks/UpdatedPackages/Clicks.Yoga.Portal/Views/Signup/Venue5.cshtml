@model Clicks.Yoga.Portal.Models.SignUp.SignUpIdModel

@{
    ViewBag.Title = "Venue 6";
    ViewBag.HeaderClass = "purple-border";
    ViewBag.BodyClass = "additionalselectorpage";
    Layout = "~/Views/Layout/SignUpLayout.cshtml";
}

<div class="row margintop100">
    <div class="col-xs-1"></div>
    <div class="col-xs-10 signup-row-normal signup-large-text purple-text ">
        <p>Would you like to add another professional page?</p>
    </div>
    <div class="col-xs-1"></div>
</div>

<div class="row purple-text threeimages margintop100">
    <div class="col-xs-12">
        @if (Model.HasTeacher)
        {
            <a class="link-no-decoration" href="#" style="color: grey; cursor: default">
                <img src="/images/svgicons/Icon_TeacherGrey.svg" data-svgpng="/images/SvgIcons/Icon_TeacherGrey.png" alt="Teacher Profile exists">
                <br>Teacher
            </a>
        }
        else
        {
            @Html.Raw(@Html.ActionLink("[replacetext]", "Teacher", "SignUp", new { step = 1 }, new { @class = "fakeclass" }).ToHtmlString().Replace("[replacetext]", "<img src=\"" + @Url.Content("/images/svgicons/Icon_TeacherPurple.svg") + "\" data-svgpng=\"/images/SvgIcons/Icon_TeacherPurple.png\" alt=\"Create teacher\" /><br />Teacher"))
        }
        @Html.Raw(@Html.ActionLink("[replacetext]", "TeacherTrainingOrganisation", "SignUp", new {step = 1}, new {@class = "fakeclass"}).ToHtmlString().Replace("[replacetext]", "<img src=\"" + @Url.Content("/images/svgicons/Icon_OrgPurple.svg") + "\" data-svgpng=\"/images/SvgIcons/Icon_OrgPurple.png\" alt=\"Create Teacher Training Organisation\" /><br />Training Organisation"))
        @Html.Raw(@Html.ActionLink("[replacetext]", "Venue", "SignUp", new {step = 1}, new {@class = "fakeclass"}).ToHtmlString().Replace("[replacetext]", "<img src=\"" + @Url.Content("/images/svgicons/Icon_VenuePurple.svg") + "\" data-svgpng=\"/images/SvgIcons/Icon_VenuePurple.png\" alt=\"Create venue\" /><br />Venue"))
    </div>
</div>

<div class="row purple-text margintop100">
    <div class="col-xs-12">@Html.ActionLink("No thanks", "Venue", "SignUp", new { step = 6, id= Model.Id }, new { @class = "btn btn-default purple-border purple-inverse-text-hover" })</div>
</div>
