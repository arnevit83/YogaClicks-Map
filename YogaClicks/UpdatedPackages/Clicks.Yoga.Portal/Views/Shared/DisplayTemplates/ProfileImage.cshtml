@model Clicks.Yoga.Portal.Models.Entities.ImageModel

@{
    var width = ViewBag.Width ?? 300;
    var height = ViewBag.Height ?? 300;
    var signup = ViewBag.BlankImage ?? false;
    var purpleImage = (ViewBag.TextColorClass == "purple-text");
  
    var StoryImage = (ViewBag.TextColorClass == "Story-text");
}

@if (signup)
{
    if (purpleImage)
    {
        @Html.Image(Model, "emptyprofileimage-purple.png", i => i.Resize(c => c.Width(width).Height(height).ScaleBoth().Crop()), "", new { width, height, @class = "img-responsive signupprofileimagerightmargin" })
    }
    else if (StoryImage)
    {
        @Html.Image(Model, "emptyprofileimage-Green.png", i => i.Resize(c => c.Width(width).Height(height).ScaleBoth().Crop()), "", new { width, height, @class = "img-responsive signupprofileimagerightmargin" })
    }
    else
    {

        @Html.Image(Model, "emptyprofileimage.png", i => i.Resize(c => c.Width(width).Height(height).ScaleBoth().Crop()), "", new { width, height, @class = "img-responsive signupprofileimagerightmargin" })
    }
    
    
}


else
{
    @Html.Image(Model, "Profile.jpg", i => i.Resize(c => c.Width(width).Height(height).ScaleBoth().Crop()), "", new { width, height, @class = "img-thumbnail img-responsive center-block" })
}

