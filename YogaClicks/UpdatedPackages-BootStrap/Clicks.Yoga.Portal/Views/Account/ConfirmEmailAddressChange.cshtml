@using Clicks.Yoga.Web
@model Clicks.Yoga.Portal.Models.Account.AccountPasswordResetModel

@{
    ViewBag.Title = "Change Email Address";
    Layout = "~/Views/Layout/Layout.cshtml";
}


<div class="forgotPasswordBg">
    <div class="container-960">
        <div class="manual-register" style="margin-top:140px;">
            @if (ViewData.ModelState.AnyErrors())
            {
                <h2>Email Address Change Error</h2>
                @Html.ValidationSummary()
            }
            else
            {
                <h2>Email Address Change Complete</h2>
                <p>Please <a href="/">click here</a> to return to the homepage</p>
            }
        </div>
        <a href="http://www.facebook.com/Artist.Photografia" class="copyrightLink">Image courtesy of Robert Sturman</a>
    </div>
</div>