@using Clicks.Yoga.Portal.Models.StyleOrganisations
@model Clicks.Yoga.Portal.Models.StyleOrganisations.OrganisationCreateStep1Model

@{
    Layout = "~/Views/Layout/Modal.cshtml";
}

@using (Html.BeginForm("CreateStep1", "StyleOrganisations"))
{
    
    
    @Html.Serialize("CreateModel", ViewBag.CreateModel as OrganisationCreateModel)

    @Html.HiddenFor(m => m.OwnerId)
    
    <h2 class="greenHeader">Create your Style Organisation page</h2>
    <hr class="modalHrSteps">
    <ul class="steps steps3">
        <li class="active"><span>Step 1</span></li>
        <li><span>Step 2</span></li>
        <li><span>Step 3</span></li>
    </ul>
 <div class="scrollableiFrame">
        @Html.ValidationSummary()
        <div class="clearRow">
            <div class="halfWidth">
                    @Html.LabelFor(m => m.Name, "Organisation name")
                    @Html.EditorFor(m => m.Name)
                </div>
            </div>
    
        <div class="clearRow">
            <div class="halfWidth">
                @Html.LabelFor(m => m.Founder, "Founded by")
                @Html.EditorFor(m => m.Founder)
            </div>
        </div>        
    
    <div class="clearRow">
        @Html.LabelFor(m => m.FoundedYear, "Founded in")
        @Html.DropDownListFor(m => m.FoundedYear, Model.FoundedYearOptions.Select(x => new SelectListItem { Value = Convert.ToString(x), Text = Convert.ToString(x) }), "")
    </div>
    
    <div>
        @Html.LabelFor(m => m.Style, "Style")
        @Html.EditorFor(m => m.Style)
        <small style="display:block;"><a href="mailto:style@yogaclicks.com">Suggest unlisted style</a></small>
    </div>
     </div>

    <div class="wizard-footer-buttons-container">
        <a href="javascript:parent.$.fancybox.close();" class="textLink fl">Cancel</a>
        <div class="wizard-footer-nav-container">
            <a href="@Url.Action("Create", "Profiles", new { id = SecurityContext.CurrentProfile.Id })" class="button pink large backBtn">Back</a>
            <input class="button pink large" type="submit" value="Next" />
        </div>
    </div>
    <div class="cb"></div>
}
