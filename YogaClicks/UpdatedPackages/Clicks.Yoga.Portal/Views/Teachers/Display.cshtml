                                                <div class=" col-sm-3 nopadding">

                                                    @if (Model.Teacher.YearsTeaching != null)
                                                    {
                                                        <h4>Total years teaching:</h4>
                                                    }


                                                </div>
                                                <div class=" col-sm-offset-1  col-sm-8">


                                                    @if (Model.Teacher.YearsTeaching != null)
                                                    {
                                                        <span>@Model.Teacher.YearsTeaching</span>
                                                    }


                                                </div>
                                            </div>
