@{
    ViewBag.Title = "Teacher Training Step 6";
    ViewBag.HeaderClass = "purple-border";
    ViewBag.BodyClass = "additionalselectorpage";
    Layout = "~/Views/Layout/SignUpLayout.cshtml";
}

<div class="row purple-text margintop100">
    <div class="col-xs-1"></div>
    <div class="col-xs-10 signup-row-normal signup-large-text">
        <p>Would you like to add another professional page?</p>
    </div>
    <div class="col-xs-1"></div>

</div>
<div class="row purple-text images margintop100">
    <div class="col-xs-12">
        @Html.Raw(@Html.ActionLink("[replacetext]", "Teacher", "SignUp", new { step = 1 }, new { @class = "fakeclass" }).ToHtmlString().Replace("[replacetext]", "<img src=\"" + @Url.Content("/images/svgicons/Icon_TeacherPurple.svg") + "\" data-svgpng=\"/images/SvgIcons/Icon_TeacherPurple.png\" alt=\"Create teacher\" /><br />Teacher"))
