@model Clicks.Yoga.Domain.Entities.SearchSortOrder

@{
    var items = new List<SelectListItem>
    {
        new SelectListItem { Value = "Relevance", Text = "Relevance" },
        new SelectListItem { Value = "Name", Text = "Alphabetical" }
    };
    
    if (ViewBag.LocationKnown)
    {
        items.Insert(0, new SelectListItem { Value = "Distance", Text = "Distance" });
    }
}

@Html.DropDownListFor(m => m, items)